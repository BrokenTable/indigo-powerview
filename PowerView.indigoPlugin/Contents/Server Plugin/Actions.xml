<?xml version="1.0"?>
<Actions>
  <Action id="setShadePosition">
    <Name>Set Shade Position</Name>
    <CallbackMethod>setShadePosition</CallbackMethod>
    <ConfigUI>
      <Field id="deviceId" type="menu">
        <Label>Device</Label>
        <List class="indigo.devices" filter="self.PowerViewShade"/>
      </Field>
      <Field id="top" type="textfield">
        <Label>Top</Label>
      </Field>
      <Field id="bottom" type="textfield">
        <Label>Bottom</Label>
      </Field>
    </ConfigUI>
  </Action>
</Actions>
