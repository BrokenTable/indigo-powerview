<?xml version="1.0"?>
<Devices>
  <Device type="custom" id="PowerViewHub">
    <Name>PowerView Hub</Name>
    <ConfigUI>
      <Field type="label" id="title">
        <Label>PowerView Hub Settings</Label>
      </Field>
      <Field type="textfield" id="hubHostname" defaultValue="192.0.2.1">
        <Label>Hostname/IP:</Label>
      </Field>
    </ConfigUI>
    <States>
      <State id="roomCount">
        <ValueType>Number</ValueType>
        <TriggerLabel>PowerView Scenes</TriggerLabel>
        <ControlPageLabel>PowerView Scenes</ControlPageLabel>
      </State>
      <State id="sceneCount">
        <ValueType>Number</ValueType>
        <TriggerLabel>PowerView Shades</TriggerLabel>
        <ControlPageLabel>PowerView Shades</ControlPageLabel>
      </State>
      <State id="sceneCollectionCount">
        <ValueType>Number</ValueType>
        <TriggerLabel>PowerView Shades</TriggerLabel>
        <ControlPageLabel>PowerView Shades</ControlPageLabel>
      </State>
      <State id="shadeCount">
        <ValueType>Number</ValueType>
        <TriggerLabel>PowerView Shades</TriggerLabel>
        <ControlPageLabel>PowerView Shades</ControlPageLabel>
      </State>
    </States>
  </Device>
</Devices>
